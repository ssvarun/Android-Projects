<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.android.navigation.ProfileFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="12dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        android:transitionName="large_image">

        <TextView
            android:id="@+id/profilewelcome"
            android:layout_width="292dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Welcome to Your Profile"
            android:textAlignment="center"
            android:textColor="#323233"
            android:textSize="18sp"
            app:fontFamily="@font/dsifh" />

        <ImageView
            android:id="@+id/editprofilebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="315dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/edit_icon"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="45dp"
            >
            <TextView
                android:id="@+id/profilename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_marginTop="12dp"
                android:text="Name :"
                android:textColor="#323233"
                android:textSize="18sp"
                app:fontFamily="@font/montserrat_light" />
            <TextView
                android:id="@+id/profileaddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Address :"
                android:textColor="#323233"
                android:textSize="18sp"
                app:fontFamily="@font/montserrat_light" />
            <TextView
                android:id="@+id/profilephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Phone Number :"
                android:textColor="#323233"
                android:textSize="18sp"
                app:fontFamily="@font/montserrat_light" />
            <TextView
                android:id="@+id/puppypoints"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Puppy Points :"
                android:textColor="#323233"
                android:textSize="18sp"
                app:fontFamily="@font/montserrat_light" />
        </LinearLayout>




    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Check Your Orders"
        android:layout_margin="15dp"
        android:textAlignment="center"
        android:textColor="#323233"
        android:textSize="18sp"
        app:fontFamily="@font/dsifh"/>

    <Button
        android:id="@+id/profileorderbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/login_button"
        android:text="Orders"
        app:backgroundTint="#B507E4" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shop Your Favorite"
        android:layout_margin="15dp"
        android:textAlignment="center"
        android:textColor="#323233"
        android:textSize="18sp"
        app:fontFamily="@font/dsifh"/>
    <Button
        android:id="@+id/profileshopbtn"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content"
        android:text="Shop Now"
        android:background="@drawable/login_button"
        app:backgroundTint="#B507E4"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textAlignment="center"
        android:textColor="#323233"
        android:textSize="18sp"
        app:fontFamily="@font/dsifh"
        android:text="Visit Your Cart" />

    <Button
        android:id="@+id/gotocartprofilebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="Go To Cart"
        android:background="@drawable/login_button"
        app:backgroundTint="#B507E4"/>
</LinearLayout>
</layout>