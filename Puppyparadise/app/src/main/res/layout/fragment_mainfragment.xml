<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="0dp"
    tools:context="com.example.android.navigation.Mainfragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bgpet">

        <TextView
            android:id="@+id/welcometxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:padding="15dp"
            android:text="@string/starttext"
            android:textColor="#B3B3B5"
            android:textAlignment="center"
            android:textSize="20sp"
            app:fontFamily="@font/dsifh"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.421"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:textAllCaps="true" />

        <TextView
            android:id="@+id/welcometxt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="320dp"
            android:padding="15dp"
            android:text="@string/starttext2"
            android:textAlignment="center"
            android:textColor="#B3B3B5"
            android:textSize="20sp"
            app:fontFamily="@font/dsifh"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/welcometxt"
            app:textAllCaps="true" />

        <Button
            android:id="@+id/loginbtn"
            android:layout_width="295dp"
            android:layout_height="56dp"
            android:layout_marginStart="158dp"
            android:layout_marginTop="61dp"
            android:layout_marginEnd="159dp"
            android:background="@drawable/login_button"
            android:padding="10dp"
            android:backgroundTint="#258942"
            android:text="Login"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/welcometxt2" />

        <Button
            android:id="@+id/registerbtn"
            android:layout_width="295dp"
            android:layout_height="56dp"
            android:layout_marginStart="163dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="154dp"
            android:background="@drawable/login_button"
            android:padding="10dp"
            android:text="Register"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.519"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loginbtn"
            app:layout_constraintVertical_bias="0.0" />



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>